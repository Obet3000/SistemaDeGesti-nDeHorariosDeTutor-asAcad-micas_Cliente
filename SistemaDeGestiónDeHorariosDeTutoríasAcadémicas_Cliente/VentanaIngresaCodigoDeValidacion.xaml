<Window x:Class="SistemaDeGestiónDeHorariosDeTutoríasAcadémicas_Cliente.VentanaIngresaCodigoDeValidacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaDeGestiónDeHorariosDeTutoríasAcadémicas_Cliente"
        mc:Ignorable="d"
        Title="Ingresa el código de validación" Height="150" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBox Name="TBCodigo" Margin="25,10,25,0" Width="250" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Orientation="Horizontal" Grid.ColumnSpan="2">
            <Button Content="Aceptar" Name="BtnAceptar" Width="80" Margin="10" Click="BtnAceptar_Click"/>
            <Button Content="Cancelar" Name="BtnCancelar" Width="80" Margin="10" Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
